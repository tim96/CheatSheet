{% extends 'TimCheatSheetBundle::layout.html.twig' %}

{% block meta_tags %}
    {{ parent() }}

    <meta name="description" content="{{ record.meta }}">
{% endblock %}

{% block title %}
    {{ parent() }} - Blog
{% endblock %}

{% block body %}
    <div class="container" style="padding-top: 30px; padding-bottom: 60px; font-size: 18px; line-height: 1.6;">
        <div class="row">
            <div class="col-md-8 col-lg-8 col-xs-12 col-sm-12">
                <div>
                    <h1>{{ record.text }}</h1>

                    <div>
                        <a href="{{ path('Blog', {'name' : record.text}) }}"><i class="fa fa-floppy-o" aria-hidden="true"></i></a>
                        <span style="font-size: small;">Added: {{ record.updatedAt|date("d.m.Y H:i") }}</span>

                        {#<i class="fa fa-binoculars" aria-hidden="true" style="padding-left: 10px;"></i>#}
                        {#<span style="font-size: small;"> {{ record.viewCount }}</span>#}
                    </div>

                    <p style="font-size: large; padding-top: 15px;">
                        {{ record.description|raw }}
                    </p>
                </div>
            </div>
            <div class="col-md-4 col-lg-4 hidden-sm hidden-xs">

                {{ include('@TimCheatSheet/Default/tagWidget.html.twig', {'tags' : record.tags}) }}

                {{ render(controller('TimCheatSheetBundle:Default:mostViewedPost')) }}

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-list"></i> Subscribe</h3>
                    </div>

                    <div class="panel-body">
                        <form method="post" action="{{ path('Subscribe') }}">
                            <div class="form-group">
                                <div class="">
                                    <input type="email" name="email" id="email" required="required" placeholder="Email" style="width: 100%;" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready( function(){
            hljs.initHighlightingOnLoad();

            $('#tabs').tab();
        });
    </script>
{% endblock %}
