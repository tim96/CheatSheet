<!DOCTYPE html>
<html {% block html_attributes %}class="no-js"{% endblock %}>
<head>
    {% block meta_tags %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="UTF-8">
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

        <meta name="description" content="Symfony framework cheatsheet, Blog about symfony, doctrine and sonataadminbundle">
        <meta name="keywords" content="PHP,Symfony,framework,symfonyizh,tutorial,example,cheat,sheet,console commands,twig,doctrine,sonataadminbundle">
        <meta name="author" content="tim96">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}

    <title>{% block title %}Example Bundle{% endblock %}</title>
</head>
<body>

{% block header %}
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('example_index') }}">Example Bundle</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                {{ knp_menu_render('TimExampleBundle:Builder:mainMenu', {'currentClass': 'active'}) }}

                {#<ul class="nav navbar-nav">#}
                    {#{% set currentRoute = app.request.attributes.get('_route') %}#}
                    {#<li class="{% if currentRoute == ('example_index') %}active{% endif %}"><a href="{{ path('example_index') }}">Index</a></li>#}
                    {#<li class="{% if currentRoute == ('example_collection') %}active{% endif %}"><a href="{{ path('example_collection') }}">Collection</a></li>#}
                {#</ul>#}
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
    <footer  class="footer" style="vertical-align: middle;">
        <div class="container">
            <p class="text-muted">&copy; tim96</p>
        </div>
    </footer>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/styles.css"  property=""/>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/app.js"></script>
{% endblock %}

</body>
</html>