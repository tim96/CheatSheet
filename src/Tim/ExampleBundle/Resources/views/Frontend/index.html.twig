{% extends 'TimExampleBundle::layout.html.twig' %}

{% block body %}
    {#{% for i, book in books %}#}
        {#{{ book.id }} {{ book.title }} {{ book.price }} {{ book.createdAt|date }}<br/>#}
    {#{% endfor %}#}

    <div style="padding: 15px;">
        {#<canvas id="myChart" width="200" height="200"></canvas>#}
        <canvas id="myChart" style="width: 200px; height: 200px;"></canvas>

        <script>

            // todo: move this functions to separate files
            if(window.attachEvent) {
                window.attachEvent('onload', paintChart);
            } else {
                if(window.onload) {
                    var curronload = window.onload;
                    window.onload = function(evt) {
                        curronload(evt);
                        paintChart(evt);
                    };
                } else {
                    window.onload = paintChart;
                }
            }

            function paintChart() {
                var ctx = document.getElementById("myChart");
                var myChart = new Chart(ctx, {
//                    type: 'bar',
//                    type: 'line',
//                    type: 'radar',
//                    type: 'polarArea',
//                    type: 'pie',
//                    type: 'doughnut',
                    type: 'doughnut',
                    data: {
                        labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                        datasets: [{
                            label: '# of Votes',
                            data: [12, 19, 3, 5, 2, 3],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255,99,132,1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero:true
                                }
                            }]
                        }
                    }
                });
            }
        </script>
    </div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="/js/chart.js"></script>
{% endblock %}